import React, { createContext, useContext, useState, useCallback, useMemo, useEffect } from 'react';

export interface ExploreAlertConfig {
  title: string;
  bodyText: string | React.ReactNode;
  type?: 'info' | 'warning' | 'error';
  primaryButtonText?: string;
  secondaryButtonText?: string;
  primaryButtonAction?: () => void;
  secondaryButtonAction?: () => void;
}

interface ExploreAlertContextType {
  alertConfig: ExploreAlertConfig | null;
  setAlert: (config: ExploreAlertConfig | null) => void;
  clearAlert: () => void;
}

const ExploreAlertContext = createContext<ExploreAlertContextType | undefined>(
  undefined,
);

export const ExploreAlertProvider: React.FC<{ children: React.ReactNode }> = ({
  children,
}) => {
  const [alertConfig, setAlertConfig] = useState<ExploreAlertConfig | null>(
    null,
  );

  // 使用函数式更新确保状态正确更新
  const setAlert = useCallback((config: ExploreAlertConfig | null) => {
    console.log('ExploreAlertContext: setAlert called with', config);
    setAlertConfig(prevConfig => {
      console.log('ExploreAlertContext: updating from', prevConfig, 'to', config);
      return config;
    });
  }, []);

  const clearAlert = useCallback(() => {
    console.log('ExploreAlertContext: clearAlert called');
    setAlertConfig(prevConfig => {
      console.log('ExploreAlertContext: clearing alert from', prevConfig);
      return null;
    });
  }, []);

  // 添加调试日志来追踪 alertConfig 的变化
  useEffect(() => {
    console.log('ExploreAlertContext: alertConfig state changed to', alertConfig);
  }, [alertConfig]);

  // 使用 useMemo 确保当 alertConfig 变化时，value 对象引用也会变化
  // 这样 React Context 才能正确检测到变化并触发更新
  const value: ExploreAlertContextType = useMemo(
    () => {
      const newValue = {
        alertConfig,
        setAlert,
        clearAlert,
      };
      console.log('ExploreAlertContext: creating value object with useMemo', {
        'newValue.alertConfig': newValue.alertConfig,
        'newValue.alertConfig type': typeof newValue.alertConfig,
        'newValue.alertConfig === null': newValue.alertConfig === null,
        'newValue.alertConfig === undefined': newValue.alertConfig === undefined,
        'hasSetAlert': !!newValue.setAlert,
        'hasClearAlert': !!newValue.clearAlert,
        'value object keys': Object.keys(newValue),
      });
      return newValue;
    },
    [alertConfig, setAlert, clearAlert], // 依赖 alertConfig，确保变化时重新创建
  );

  return (
    <ExploreAlertContext.Provider value={value}>
      {children}
    </ExploreAlertContext.Provider>
  );
};

export const useExploreAlert = () => {
  const context = useContext(ExploreAlertContext);
  if (!context) {
    throw new Error('useExploreAlert must be used within ExploreAlertProvider');
  }
  
  // 调试日志：检查从 Context 获取的值
  console.log('useExploreAlert: context from useContext', context);
  console.log('useExploreAlert: context.alertConfig', context.alertConfig);
  console.log('useExploreAlert: context.alertConfig type', typeof context.alertConfig);
  console.log('useExploreAlert: context.alertConfig === null?', context.alertConfig === null);
  console.log('useExploreAlert: context.alertConfig === undefined?', context.alertConfig === undefined);
  console.log('useExploreAlert: context keys', Object.keys(context));
  console.log('useExploreAlert: has alertConfig property?', 'alertConfig' in context);
  console.log('useExploreAlert: context.alertConfig value', JSON.stringify(context.alertConfig));
  
  return context;
};


